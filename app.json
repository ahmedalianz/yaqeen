{
  "expo": {
    "name": "Yaqeen",
    "slug": "yaqeen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/splash.png",
    "scheme": "yaqeen",
    "userInterfaceStyle": "automatic",
    "permissions": [
      "NOTIFICATIONS",
      "LOCATION_WHEN_IN_USE",
      "BACKGROUND_FETCH"
    ],
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ahmedafify.yaqeen",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification",
          "audio"
        ],
        "NSLocationWhenInUseUsageDescription": "We need your location to calculate accurate prayer times for your area.",
        "NSLocationAlwaysUsageDescription": "We need your location to send prayer time notifications even when the app is closed."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.ahmedafify.yaqeen",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.USE_EXACT_ALARM"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/mosque.png",
          "color": "#d4a574",
          "sounds": [
            "./assets/audio/azan.mp3"
          ],
          "defaultVolume": 0.8
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "يسمح $(PRODUCT_NAME) باستخدام موقعك لحساب أوقات الصلاة بدقة."
        }
      ],
      "expo-av",
      "expo-font",
      [
        "expo-background-fetch",
        {
          "minimumInterval": 15,
          "stopOnTerminate": false,
          "startOnBoot": true
        }
      ],
      "expo-background-task"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
